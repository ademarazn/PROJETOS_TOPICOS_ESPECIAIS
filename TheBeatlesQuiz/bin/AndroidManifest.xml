<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ademarazn.thebeatlesquiz"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PerguntaActivity"
            android:label="@string/title_activity_pergunta"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".SobreActivity"
            android:label="@string/title_activity_sobre"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".AcertoActivity"
            android:label="@string/title_activity_acerto"
            android:parentActivityName=".MainActivity" >
        </activity>
    </application>

</manifest>
